<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div id="headerWrap">
            <div class="loginform">
                @Helpers.LoginForm()
            </div>
            <nav>
                <ul>
                    @Helpers.TopMenu()
                </ul>
            </nav>
        </div>
    </header>

    <div id="articleWrap">
        <article>
            @RenderBody()
        </article>
    </div>

    <footer>
        <div id="footerWrap">
            &copy;&nbsp;2014 — CoolFaggots Inc.
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
