<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="loginform">
            @Helpers.LoginForm()
        </div>
        <nav>
            <ul>
                <li class="brand">CultureITS</li>
                <li>Home</li>
                <li>Stats</li>
            </ul>
        </nav>
    </header>

    <article>
        @RenderBody()
    </article>

    <footer>
        &copy;2014 — CoolFaggots Inc.
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
