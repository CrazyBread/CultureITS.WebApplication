@model CultureITS.Areas.Admin.Models.UserViewModel

@{
    ViewBag.Title = "Список пользователей";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "Edit", null, new { @class = "button" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(i => i.Item.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(i => i.Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(i => i.Item.UserRole)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.List) {
    <tr>
        <td>
            @Html.DisplayFor(i => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(i => item.Name)
        </td>
        <td>
            @Html.DisplayFor(i => item.UserRole)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserName }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserName }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserName })
        </td>
    </tr>
}

</table>
