@model CultureITS.Areas.Admin.Models.GameObjectViewModel

@{
    ViewBag.Title = "Игровые объекты и материалы, связанные с ними";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Edit")" class="button"><i class="fa fa-plus"></i>Добавить</a>
</p>
@if (Model.List == null || Model.List.Count() == 0)
{
    <p>Нет данных.</p>
}
else
{
    <table>
        <tr>
            <th>&nbsp;</th>
            <th>Название</th>
            <th>Краткое описание</th>
            <th>Может быть отмечен</th>
        </tr>
        @foreach (var item in Model.List)
        {
            <tr>
                <td class="top">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="button button-small"><i class="fa fa-pencil-square-o"></i></a>|
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="button button-small"><i class="fa fa-trash-o"></i></a>
                </td>
                <td class="top">@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td class="cnt top">@(item.CanNotified ? "+" : "-")</td>
            </tr>
        }
    </table>  
}